@model IEnumerable<VendaLanches.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create">Criar Nova Categoria</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoriaId">Edita</a> |
                        <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoriaId">Deleta</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
